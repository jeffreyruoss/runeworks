{
  "name": "runeworks",
  "version": "0.1.0",
  "description": "A peaceful, keyboard-only, stage-based micro-factory builder",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "sprites": "cd tools/spritegen && node generate.js",
    "sprites:ai": "cd tools/spritegen-ai && node generate.js",
    "sprites:ai:pack": "cd tools/spritegen-ai && node pack-atlas.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js,json,html,css,md}": "prettier --write"
  },
  "dependencies": {
    "phaser": "^4.0.0-rc.6",
    "phaser-pixui": "^0.1.6"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pixel-tools": "^0.9.2",
    "prettier": "^3.8.1",
    "typescript": "^5.3.3",
    "vite": "^5.4.2",
    "vitest": "^4.0.18"
  }
}
